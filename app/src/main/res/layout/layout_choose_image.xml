<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/btn_cancel_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border_gray_white_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_gray_btn_bg_2"
            android:gravity="center"
            android:padding="@dimen/green_btn_padding"
            android:text="@string/cancel"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_cancel_area"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border_gray_white_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/choose_from_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_gray_btn_bg_2"
            android:gravity="left"
            android:padding="@dimen/green_btn_padding"
            android:text="@string/choose_from_camera"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/light_gray2" />

        <Button
            android:id="@+id/choose_from_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_gray_btn_bg_2"
            android:gravity="left"
            android:padding="@dimen/green_btn_padding"
            android:text="@string/choose_from_album"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>