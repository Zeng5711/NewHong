<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hongbang.ic.activity.RepairDetailActivity">

    <ImageView
        android:id="@+id/corner_process_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_corner_unprocessed"
        android:visibility="gone" />

    <TextView
        android:id="@+id/label_repair_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/label_repair_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/label_repair_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/label_repair_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/label_repair_title"
        android:layout_alignRight="@id/label_repair_time"
        android:layout_below="@id/label_repair_title"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_gray2"
        android:focusable="false"
        android:gravity="top"
        android:inputType="none"
        android:lines="4"
        android:padding="5dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_repair_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@id/label_repair_title"
        android:layout_below="@id/label_repair_desc"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_image_add_pressed"
        android:cropToPadding="true"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/label_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/label_repair_title"
        android:layout_below="@id/image_repair_photo"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="物业反馈"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/label_feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/label_feedback"
        android:layout_alignParentRight="true"
        android:layout_below="@id/label_phone"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/label_feedback_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/label_repair_title"
        android:layout_alignRight="@id/label_repair_time"
        android:layout_below="@id/label_feedback"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_gray2"
        android:focusable="false"
        android:gravity="top"
        android:inputType="none"
        android:lines="4"
        android:padding="5dp"
        android:textSize="16sp" />

</RelativeLayout>
