<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray2"
                tools:context=".activity.AboutActivity">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/app_name_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_name_version"
        android:textColor="@color/gray"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_version"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_score"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/to_score"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/btn_check_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_upgrade"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/btn_manual"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_manual"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small"/>


        <LinearLayout
            android:id="@+id/debug_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/personal_edge_space"
                android:layout_marginRight="@dimen/personal_edge_space"
                android:background="@color/light_gray"/>

            <TextView
                android:id="@+id/btn_debug"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_item_height"
                android:background="@drawable/sel_gray_btn_bg"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/personal_edge_space"
                android:paddingRight="@dimen/personal_edge_space"
                android:text="@string/text_debug"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_text_size_small"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/copyright"
        android:textColor="@color/gray"
        android:textSize="13sp"/>

</RelativeLayout>
