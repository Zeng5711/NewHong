<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/personal_edge_space"
        android:paddingRight="@dimen/personal_edge_space"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/text_key_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/label_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_key_type2"
            android:text="小区名称"
            android:textColor="@color/gray"
            android:textSize="@dimen/btn_text_size_small2"/>

        <TextView
            android:id="@+id/label_key_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_community"
            android:layout_marginTop="10dp"
            android:text="权限类型"
            android:textColor="@color/gray"
            android:textSize="@dimen/btn_text_size_small2"/>

        <TextView
            android:id="@+id/label_validity_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_key_type"
            android:layout_marginTop="10dp"
            android:text="钥匙有效期"
            android:textColor="@color/gray"
            android:textSize="@dimen/btn_text_size_small2"/>

        <TextView
            android:id="@+id/text_validity_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_validity_period"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/label_validity_period"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

        <Button
            android:id="@+id/btn_share_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/label_community"
            android:background="@drawable/sel_btn_share_key"
            android:minHeight="0dp"
            android:minWidth="0dp"/>

        <TextView
            android:id="@+id/text_key_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_key_type"
            android:layout_alignLeft="@id/text_validity_period"
            android:layout_toLeftOf="@id/btn_share_key"
            android:layout_toRightOf="@id/label_validity_period"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

        <TextView
            android:id="@+id/text_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_community"
            android:layout_alignLeft="@id/text_validity_period"
            android:layout_toLeftOf="@id/btn_share_key"
            android:layout_toRightOf="@id/label_validity_period"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>