<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray2"
              android:orientation="vertical"
              tools:context=".fragment.PersonalFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/personal_edge_space"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/image_head_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head_portrait"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_toRightOf="@id/image_head_portrait"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="@string/hint_null_nickname"
                android:lines="1"
                android:textSize="@dimen/btn_text_size"/>

            <TextView
                android:id="@+id/text_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/btn_text_size_small2"/>

            <TextView
                android:id="@+id/text_community_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/btn_text_size_small2"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawableLeft="@drawable/icon_change_password"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_change_password"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/btn_share_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawableLeft="@drawable/icon_share_app"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/btn_service_hotline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawableLeft="@drawable/icon_service_hotline"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_service_hotline"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/btn_check_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawableLeft="@drawable/icon_upgrade"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_upgrade"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/btn_abort_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawableLeft="@drawable/icon_abort"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_abort"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/personal_edge_space"
            android:layout_marginRight="@dimen/personal_edge_space"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@drawable/sel_gray_btn_bg"
            android:drawableLeft="@drawable/icon_settings"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_edge_space"
            android:paddingRight="@dimen/personal_edge_space"
            android:text="@string/text_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size_small2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/personal_edge_space"
        android:paddingRight="@dimen/personal_edge_space">

        <Button
            android:id="@+id/btn_change_community"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_green_btn_bg"
            android:padding="@dimen/green_btn_padding"
            android:text="@string/text_change_community"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/sel_green_btn_bg"
            android:padding="@dimen/green_btn_padding"
            android:text="@string/text_logout"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>